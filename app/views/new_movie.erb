<h1>I'm With Local</h1>
 
    <form action="/movies/create" method="post">
              <fieldset> 
                  <legend>Add Movie</legend>
                    <div class="form-group">
                      <label for="title">Movie Title</label>
                      <input type="text" class="form-control" id="title" name="title" placeholder="Movie Title">
                    </div>
                    <div class="form-group">
                      <label for="release_date">Release Date</label>
                      <input type="datetime" class="form-control" id="release_date" name="release_date" placeholder="Release Date">
                    </div>
                    <p> 
                      <div class="form-group">
                        <label for="genre">Genre</label>
                        <select name="genre" id="genre">
                          <option>Action</option>
                          <option>Adventure</option>
                          <option>Comedy</option>
                          <option>Suspense</option>
                          <option>Drama</option>
                          <option>Horror</option>
                          <option>Musical</option>
                          <option>RomCom</option>
                          <option>Science Fiction</option>
                          <option>War</option>
                          <option>Western</option>
                        </select>
                      </div>
                    </p>
                    <div class="form-group">
                      <label for="director">Director</lael>
                         <input type="text" class="form-control" id="director" name="director" placeholder="Director">
                    </div>
                     <div class="form-group">
                      <label for="run_time">Run Time (minutes)</label>
                      <input type="integer" class="form-control" id="run_time" name="run_time" placeholder="Run Time">
                    </div>
              </fieldset> 
                <div class="form-group">
                    <p>
                       <button type="button" class="btn btn-primary">Submit</button>  
                    </p>
                </div>
    </form>